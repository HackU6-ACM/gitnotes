{
  "manifest_version": 2,
  "name": "gitnotes",
  "version": "0.0.1",
  "description": "This extension allows users to view popup tooltips over inline text",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "https://github.com/*",
	"webNavigation"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["src/scripts/Tooltip.js", "src/scripts/makeTooltip.js", "popup.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
